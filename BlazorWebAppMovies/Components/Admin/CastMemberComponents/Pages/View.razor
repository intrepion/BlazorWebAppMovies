@page "/admin/cast-member/view/{CastMemberId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>Cast Member View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Cast Member with that id doesn't exist.</div>
}
else
{
    @if (CastMember is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        <h1>@CastMember.Id</h1>
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the Cast Member.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@CastMember.Id</h3>
        <br />

        <h2>Name1</h2>
        <br />
        <h3>@CastMember.Name1</h3>
        <br />
        <h2>Name2</h2>
        <br />
        <h3>@CastMember.Name2</h3>
        <br />
        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/cast-member/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/cast-member/edit/@CastMember.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This Cast Member has been deleted.</div>
        }
    }
}

@code {
    // Tracking of asynchronous calls.
    private bool Loading;

    // Id from route of Cast Member.
    [Parameter]
    public Guid CastMemberId { get; set; }

    // Navigation check.
    private Guid _lastCastMemberId;

    // True with redirect from successful edit.
    [Parameter]
    public bool EditSuccess { get; set; }

    // CastMember entity.
    private CastMember? CastMember { get; set; }

    // Set to true when not found.
    private bool NotFound = false;

    // Set to true when delete is requested.
    private bool ShowConfirmation = false;

    // Set to true when delete is successful.
    private bool Deleted = false;

    // Navigated
    protected override async Task OnParametersSetAsync()
    {
        if (_lastCastMemberId != CastMemberId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastCastMemberId = CastMemberId;
            await LoadCastMemberAsync();
        }
    }

    // Confirm deletion.
    // result is True when user confirmed.
    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    // Loads the Cast Member.
    private async Task LoadCastMemberAsync()
    {
        if (Loading)
        {
            return; //avoid concurrent requests.
        }

        NotFound = false;
        CastMember = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.CastMembers is not null)
        {
            CastMember = await context.CastMembers
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    c => c.Id == CastMemberId);

            if (CastMember is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    // Deletes the Cast Member.
    private async Task DeleteAsync()
    {
        if (Loading)
        {
            // Avoid concurrent requests.
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.CastMembers
                .SingleOrDefaultAsync(c => c.Id == CastMemberId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.CastMembers?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                // Show not found.
                await LoadCastMemberAsync();
            }
        }
        else
        {
            Loading = false;
            // Show not found.
            await LoadCastMemberAsync();
        }
    }
}
