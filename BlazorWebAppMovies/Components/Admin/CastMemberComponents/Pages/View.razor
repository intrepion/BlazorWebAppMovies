@page "/admin/UrlNamePlaceholder/view/{CastMemberId:guid}"
@rendermode InteractiveServer
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject IPageHelper PageHelper
@inject EditSuccess EditSuccessState

<PageTitle>Cast Member View</PageTitle>

@if (NotFound && !Loading)
{
    <div class="alert alert-warning">Cast Member with that id doesn't exist.</div>
}
else
{
    @if (CastMember is null || Loading)
    {
        <div class="alert alert-info">Loading...</div>
    }
    else
    {
        @* PageHeaderCodePlaceholder *@

        <br />
        @if (EditSuccess)
        {
            <div class="alert alert-success">Successfully updated the Cast Member.</div>
        }
        <hr />
        <h2>Id</h2>
        <br />
        <h3>@CastMember.Id</h3>
        <br />

        @* PropertyCodePlaceholder *@

        <a class="btn btn-primary" title="Go Back" href="admin/UrlNamePlaceholder/@PageHelper.Page">
            Back to Grid
        </a>
        <span>&nbsp;</span>
        @if (!Deleted)
        {
            <a class="btn btn-primary" href="admin/UrlNamePlaceholder/edit/@CastMember.Id" title="Edit">Edit</a>

            <span>&nbsp;</span>
            @if (!ShowConfirmation)
            {
                <button class="btn btn-danger" @onclick="@(() => { ShowConfirmation = true; EditSuccess = false; })">Delete</button>
            }
            else
            {
                <br />
                <br />
                <DeletePrompt Confirmation="@(async result => await ConfirmAsync(result))" />
            }
        }
        else
        {
            <div class="btn btn-danger">ðŸš« This Cast Member has been deleted.</div>
        }
    }
}

@code {
    private bool Loading;

    [Parameter]
    public Guid CastMemberId { get; set; }

    private Guid _lastCastMemberId;

    [Parameter]
    public bool EditSuccess { get; set; }

    private CastMember? CastMember { get; set; }

    private bool NotFound = false;

    private bool ShowConfirmation = false;

    private bool Deleted = false;

    protected override async Task OnParametersSetAsync()
    {
        if (_lastCastMemberId != CastMemberId)
        {
            EditSuccess = EditSuccessState.Success;
            EditSuccessState.Success = false;
            _lastCastMemberId = CastMemberId;
            await LoadCastMemberAsync();
        }
    }

    private async Task ConfirmAsync(bool result)
    {
        if (result)
        {
            await DeleteAsync();
        }
        else
        {
            ShowConfirmation = false;
            EditSuccess = false;
        }
    }

    private async Task LoadCastMemberAsync()
    {
        if (Loading)
        {
            return;
        }

        NotFound = false;
        CastMember = null;

        Loading = true;

        using var context = DbFactory.CreateDbContext();

        if (context.TableNamePlaceholder is not null)
        {
            CastMember = await context.TableNamePlaceholder
                .AsNoTracking()
                .SingleOrDefaultAsync(
                    x => x.Id == CastMemberId);

            if (CastMember is null)
            {
                NotFound = true;
            }
        }

        Loading = false;
    }

    private async Task DeleteAsync()
    {
        if (Loading)
        {
            return;
        }

        Loading = true;
        using var context = DbFactory?.CreateDbContext();

        if (context?.Roles is not null)
        {
            var LowercaseNamePlaceholder = await context.TableNamePlaceholder
                .SingleOrDefaultAsync(x => x.Id == CastMemberId);

            if (LowercaseNamePlaceholder is not null)
            {
                context.TableNamePlaceholder?.Remove(LowercaseNamePlaceholder);
                await context.SaveChangesAsync();
                Loading = false;
                Deleted = true;
            }
            else
            {
                Loading = false;
                await LoadCastMemberAsync();
            }
        }
        else
        {
            Loading = false;
            await LoadCastMemberAsync();
        }
    }
}
