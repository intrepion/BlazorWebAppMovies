@inject IMovieFilters Filters

@if (CurrentMovie is not null)
{
    <div class="row contact-detail">
        <div class="col-2 text-right">
            <a title="Edit" href="admin/movie/edit/@CurrentMovie.Id" style="text-decoration:none">
                &nbsp;üìù&nbsp;
            </a>
            @if (CanDelete)
            {
                <span @onclick="DeleteRequestAsync"
                      title="Delete" class="clickable red">‚ùå</span>
            }
            else
            {
                <span>&nbsp;</span>
            }
            &nbsp;
        </div>

        <div class="col-3">
            <a href="@ViewLink" alt="View Details"
               title="View Details">
                @CurrentMovie.Title
            </a>
        </div>

        @if (!DeleteConfirmation)
        {
            <div class="col-3" data-testid="MovieId">@CurrentMovie.Id</div>

            @* RowColumnCodePlaceholder *@
            @* <div class="col-3">@CurrentApplicationUser.PhoneNumber</div> *@
        }
        else
        {
            <div class="col-9">
                <DeletePrompt Confirmation="ConfirmAsync" />
            </div>
        }
    </div>
}

@code {
    private Movie _currentMovie = new Movie();

    // Movie being rendered.
    [Parameter]
    public Movie CurrentMovie
    {
        get => _currentMovie;
        set
        {
            if (value is not null && !value.Equals(_currentMovie))
            {
                _currentMovie = value;
                DeleteConfirmation = false;
            }
        }
    }

    // Event to raise when a contact delete is requested.
    [Parameter]
    public EventCallback DeleteMovie { get; set; }

    // Overall wrapper of functionality.
    [CascadingParameter]
    public GridWrapper? Wrapper { get; set; }

    // Returns True if conditions for delete are met.
    private bool CanDelete =>
        !DeleteConfirmation && (Wrapper?.DeleteRequestId.Equals(Guid.Empty) == true || Wrapper?.DeleteRequestId.Equals(CurrentMovie?.Id) == true);

    // Navigate to view.
    private string ViewLink => $"admin/movie/view/{CurrentMovie?.Id}";

    // Confirm the delete.
    private bool DeleteConfirmation { get; set; }

    // Called based on confirmation.
    // confirmed: True when confirmed.
    private async Task ConfirmAsync(bool confirmed)
    {
        if (confirmed)
        {
            await DeleteAsync();
        }
        else
        {
            DeleteConfirmation = false;

            if (Wrapper is not null)
            {
                await Wrapper.DeleteRequested.InvokeAsync(Guid.Empty);
            }
        }
    }

    /// Set delete to true.
    private async Task DeleteRequestAsync()
    {
        if (Wrapper?.DeleteRequestId.Equals(Guid.Empty) == true)
        {
            DeleteConfirmation = true;
            await Wrapper.DeleteRequested.InvokeAsync(CurrentMovie.Id);
        }
    }

    // Deletes the Movie.
    private Task DeleteAsync() => DeleteMovie.InvokeAsync(this);
}
