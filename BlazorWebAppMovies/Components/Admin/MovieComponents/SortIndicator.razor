@inject IMovieFilters Filters

@if (Column == Filters.SortColumn)
{
    <span>@SortSymbol</span>
}
else
{
    <span>&nbsp;</span>
}

@code {
    // Sets which MovieFilterColumns this indicator is for.
    [Parameter]
    public MovieFilterColumns Column { get; set; }

    // The symbol to render.
    private string SortSymbol => Filters.SortAscending ? "🔼" : "🔽";
}
