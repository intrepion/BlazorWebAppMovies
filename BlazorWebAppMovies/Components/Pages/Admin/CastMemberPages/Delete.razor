@page "/castmembers/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorWebAppMovies.BusinessLogic.Entities
@inject IDbContextFactory<BlazorWebAppMovies.BusinessLogic.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>CastMember</h2>
    <hr />
    @if (castmember is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name1</dt>
            <dd class="col-sm-10">@castmember.Name1</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">NormalizedName1</dt>
            <dd class="col-sm-10">@castmember.NormalizedName1</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Name2</dt>
            <dd class="col-sm-10">@castmember.Name2</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">NormalizedName2</dt>
            <dd class="col-sm-10">@castmember.NormalizedName2</dd>
        </dl>
        <EditForm method="post" Model="castmember" OnValidSubmit="DeleteCastMember" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(castmember is null)">Delete</button> |
            <a href="/castmembers">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private CastMember? castmember;

    [SupplyParameterFromQuery]
    private Guid Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        castmember = await context.CastMembers.FirstOrDefaultAsync(m => m.Id == Id);

        if (castmember is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteCastMember()
    {
        using var context = DbFactory.CreateDbContext();
        context.CastMembers.Remove(castmember!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/castmembers");
    }
}
