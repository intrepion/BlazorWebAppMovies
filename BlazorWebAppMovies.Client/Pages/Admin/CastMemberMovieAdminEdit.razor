@page "/admin/cast-member-movie-edit/{id:guid?}"
@rendermode InteractiveAuto
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject NavigationManager NavigationManager
@inject ICastMemberMovieAdminRepository CastMemberMovieAdminRepository
@attribute [Authorize(Roles = "Admin")]

@inject ICastMemberAdminRepository CastMemberAdminRepository
@inject IMovieAdminRepository MovieAdminRepository
@* InjectionCodePlaceholder *@
@* @inject IToDoListAdminRepository ToDoListAdminRepository *@

  @if (Id.Equals(Guid.Empty))
  {
    <PageTitle>Cast Member Movie Creation</PageTitle>
  }
  else
  {
    <PageTitle>Cast Member Movie Modification</PageTitle>
  }

<section>
  @if (Id.Equals(Guid.Empty))
  {
    <h1>Cast Member Movie Creation</h1>
  }
  else
  {
    <h1>Cast Member Movie Modification</h1>
  }
  <article>
    <EditForm class="container" Model="castMemberMovieAdminEditViewModel" OnSubmit="HandleSubmit">

      <div class="row">
        <div class="col">
          <label>
            Cast Member:
            <select @onchange="CastMemberOnChange">
              <option>Select cast member...</option>
                @if (castMemberAdminDtos != null)
                {
                  @foreach (var castMember in castMemberAdminDtos)
                  {
                    if (castMemberMovieAdminEditViewModel.CastMember != null && castMemberMovieAdminEditViewModel.CastMember.Id.Equals(castMember.Id))
                    {
                      <option value="@castMember.Id" selected>@castMember?.Name1 @castMember?.Name2</option>
                    }
                    else
                    {
                      <option value="@castMember.Id">@castMember?.Name1 @castMember?.Name2</option>
                    }
                  }
                }
              </select>
          </label>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <label>
            Movie:
            <select @onchange="MovieOnChange">
              <option>Select movie...</option>
                @if (movieAdminDtos != null)
                {
                  @foreach (var movie in movieAdminDtos)
                  {
                    if (castMemberMovieAdminEditViewModel.Movie != null && castMemberMovieAdminEditViewModel.Movie.Id.Equals(movie.Id))
                    {
                      <option value="@movie.Id" selected>@movie?.Title</option>
                    }
                    else
                    {
                      <option value="@movie.Id">@movie?.Title</option>
                    }
                  }
                }
              </select>
          </label>
        </div>
      </div>
      @* EditRowCodePlaceholder *@

      <div class="row">
        <div class="col">
          @if (!Id.Equals(Guid.Empty))
          {
            <button @onclick="Remove" type="button" class="btn btn-danger">Remove</button>
          }
        </div>
        <div class="col">
          <a href="/admin/cast-member-movie-list">Cancel</a>
          @if (Id.Equals(Guid.Empty))
          {
            <button type="submit" class="btn btn-primary">Create</button>
          }
          else
          {
            <button type="submit" class="btn btn-primary">Modify</button>
          }
         </div>
      </div>
    </EditForm>
  </article>
</section>

@code {
  [Parameter]
  public Guid Id { get; set; }
  CastMemberMovieAdminEditViewModel castMemberMovieAdminEditViewModel { get; set; } = new CastMemberMovieAdminEditViewModel();

  List<CastMemberAdminDto> castMemberAdminDtos { get; set; } = [];
    @* ListDeclarationCodePlaceholder *@

  protected override async Task OnInitializedAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    await base.OnInitializedAsync();

    var castMemberAdminDtosResult = await CastMemberAdminRepository.GetAllAsync(userName);
        if (castMemberAdminDtosResult != null)
        {
            castMemberAdminDtos = castMemberAdminDtosResult;
        }
        @* OnInitializedCodePlaceholder *@
  }

  protected override async Task OnParametersSetAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    var databaseCastMemberMovieAdminDto = await CastMemberMovieAdminRepository.GetByIdAsync(userName, Id);

    if (databaseCastMemberMovieAdminDto == null)
    {
      castMemberMovieAdminEditViewModel = new CastMemberMovieAdminEditViewModel();
    }
    else
    {
      castMemberMovieAdminEditViewModel = CastMemberMovieAdminEditViewModel.FromCastMemberMovieAdminDto(databaseCastMemberMovieAdminDto);
    }
  }

  async Task HandleSubmit()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    @* RequiredPropertyPlaceholder *@

    var castMemberMovieAdminDto = CastMemberMovieAdminEditViewModel.ToCastMemberMovieAdminDto(castMemberMovieAdminEditViewModel);
    castMemberMovieAdminDto.ApplicationUserName = userName;

    if (Id.Equals(Guid.Empty))
    {
      var newCastMemberMovieAdminDto = await CastMemberMovieAdminRepository.AddAsync(castMemberMovieAdminDto);

      if (newCastMemberMovieAdminDto == null)
      {
        return;
      }

      NavigationManager.NavigateTo($"/admin/cast-member-movie-edit/{newCastMemberMovieAdminDto.Id}");
    }
    else
    {
      await CastMemberMovieAdminRepository.EditAsync(castMemberMovieAdminDto);
    }
  }

  async Task Remove()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name!;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    await CastMemberMovieAdminRepository.DeleteAsync(userName, Id);
    NavigationManager.NavigateTo($"/admin/cast-member-movie-list");
  }

  void CastMemberOnChange(ChangeEventArgs args)
    {
        if (args.Value == null)
        {
            return;
        }

        var id = (string)args.Value;
        castMemberMovieAdminEditViewModel.CastMember = CastMemberAdminDto.ToCastMember(null, castMemberAdminDtos?.Where(x => x.Id.ToString().Equals(id)).FirstOrDefault());
    }

    @* OnChangeCodePlaceholder *@
}
